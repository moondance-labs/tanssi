{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "paths": {
            "dancebox": ["dancebox/src"],
            "flashbox": ["flashbox/src"]
        }
    },
    "exclude": ["node_modules", "build"]
}
